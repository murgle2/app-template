<mjml>
  <mj-body background-color="#fff">
    <mj-section>
      <mj-column>
        <mj-image width="250px" src=""/>
        <mj-text font-size="20px" color="#555" font-family="helvetica">{{ project_name }} - Email Verification</mj-text>
        <mj-text font-size="16px" color="#555">We received a request to verify the email for {{ email }}</mj-text>
        <mj-text font-size="16px" color="#555">Verify your email by clicking the button below:</mj-text>
        <mj-button padding="50px 0px" href="{{ link }}" background-color="#FF0000">Verify Email</mj-button>
        <mj-text font-size="16px" color="#555">Or open the following link:</mj-text>
        <mj-text font-size="16px" color="#555"><a href="{{ link }}">{{ link }}</a></mj-text>
        <mj-divider border-color="#555" border-width="2px" />
        <mj-text font-size="14px" color="#555">The verify email link / button will expire in {{ valid_hours }} hours.</mj-text>
        <mj-text font-size="14px" color="#555">If you didn't request an email verification you can disregard this email.</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
